<div class="requirementsOverview">
    <h1>{{requirement.name}}</h1>
    {{#latestVersion}}
    <h2>Latest version</h2>
    <p>{{latestVersion}}</p>
    {{/latestVersion}}
    <table>
        <tr>
            <th>Version</th>
        </tr>
        {{#versions}}
        <tr>
            <td><a href="/ui/requirement/{{requirement.id}}/version/{{id}}">{{creationTimestamp}}</a></td>
        </tr>
        {{/versions}}
    </table>
    <input type="button" value="Create new version" onclick="location.href='/ui/requirement/{{requirement.id}}/version'"></input>
</div>